<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExercisesFragment">

    <Spinner
        android:id="@+id/exerciseSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="400dip"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:textStyle="bold"
        android:textColor="#4a5cff"
        android:text="1 Rep Max Estimate: " />

    <TextView
        android:id="@+id/highestWeightView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:textStyle="bold"
        android:textColor="#4a5cff"
        android:text="Personal Best: " />

    <TextView
        android:id="@+id/exerciseHighestWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="100dp" />

    <TextView
        android:id="@+id/repsCompletedForView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:textStyle="bold"
        android:textColor="#4a5cff"
        android:text="Reps Completed For: " />

    <TextView
        android:id="@+id/repsCompletedFor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="140dp" />

    <TextView
        android:id="@+id/oneRME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="140dp" />

</FrameLayout>